<%- include("partials/login_header") %>

<body>
  <section id="main">
    <main class="w-100 m-auto text-center justify-content-center">
      <img class="mb-4" src="/assets/ChilloutLogo_2.png" alt="chillout logo" height="50px">
      <% if (error) { %>
        <div class="alert" style="background-color: rgba(197, 197, 197, 0.397)" role="alert">
          <span style="opacity: 1; color: rgba(0, 0, 0, 0.801)"><%= error %></span>
        </div>
      <% } %>
      <form id="signup-form" class="d-flex justify-content-center" method="post" action="/register">
        <div id="signup-box" class="p-5 mx-auto">
          <h1 class="h3 mb-2 fw-bold">Join us today</h1>
          <p class="mb-4">Fill in your sign up details below.</p>
          <div class="form-floating">
            <input type="email" class="form-control mb-3" id="signup-email" placeholder="name@example.com" name="username">
            <label for="signup-email" class="opacity-75">Your Email</label>
          </div>
          <div class="form-floating">
            <input type="password" class="form-control mb-3" id="signup-password" placeholder="Password" name="password">
            <label for="signup-password" class="opacity-75">Your Password</label>
          </div>
          <button class="w-100 btn btn-lg btn-primary" id="signup-btn" type="submit">Sign Up</button>
          <p class="mt-4">Already have an account? <a id="redirect-login" href="/login">Log in</a></p>
        </div>
      </form>
      <p id="copyright" class="mt-4 mb-3 text-white opacity-25">Chillout Â© 2023</p>
    </main>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYdMqSM8r4/lU0U8" crossorigin="anonymous"></script>

</body>
</html>
